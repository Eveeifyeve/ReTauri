{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "http://localhost:5173/",
    "distDir": "http://app.chat.revolt",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Retauri",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "shell": {
        "all": true,
        "open": true
      },
      "http": {
        "all": true,
        "request": true, 
        "scope": ["https://app.revolt.chat"]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Retauri",
        "width": 800,
        "height": 600,
        "decorations": true
      }
    ]
  }
}
